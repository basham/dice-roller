{
  "name": "dice-roller",
  "version": "1.0.0",
  "description": "Dice rolling web app",
  "main": "index.js",
  "scripts": {
    "build": "pika-web --clean --optimize --no-source-map --dest ./public/web_modules/",
    "postbuild": "cp ./node_modules/es-module-shims/dist/es-module-shims.min.js ./public/web_modules/es-module-shims.min.js",
    "postinstall": "npm run build",
    "start": "es-dev-server --open --watch --root-dir ./public/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/basham/dice-roller.git"
  },
  "author": "Chris Basham <chris@bash.am>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/basham/dice-roller/issues"
  },
  "homepage": "https://github.com/basham/dice-roller#readme",
  "dependencies": {
    "construct-style-sheets-polyfill": "2.3.0",
    "es-module-shims": "0.4.6",
    "lighterhtml": "1.4.1",
    "rxjs": "6.5.3",
    "when-elements": "0.2.1"
  },
  "devDependencies": {
    "@pika/web": "0.6.1",
    "es-dev-server": "1.23.1",
    "now": "16.4.4"
  },
  "@pika/web": {
    "webDependencies": [
      "construct-style-sheets-polyfill",
      "lighterhtml",
      "rxjs",
      "rxjs/operators",
      "when-elements"
    ]
  }
}
